<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="6dip" >

    <TextView
        android:id="@+id/row_time"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="32dip"
        android:text="0 min" />

    <TextView
        android:id="@+id/row_activity"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/row_time"
        android:layout_marginRight="32dip"
        android:text="Activity" />

    <TextView
        android:id="@+id/row_name"
        android:layout_width="330dp"
        android:layout_height="24dp"
        android:layout_alignWithParentIfMissing="true"
        android:layout_above="@id/row_desc"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="75dp"
        android:layout_toLeftOf="@+id/row_time"
        android:gravity="center_vertical"
        android:text="Session Name"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/row_desc"
        android:layout_width="330dp"
        android:layout_height="24dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="75dp"
        android:layout_toLeftOf="@+id/row_activity"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="Session Description"
        android:textSize="12sp" />


</RelativeLayout>